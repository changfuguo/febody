<!-- BEGIN BREADCRUMB -->
<div class="page-bar" >
	<div class="page-breadcrumb" ncy-breadcrumb></div>	
</div>
<!-- END BREADCRUMB -->
<div class="row">
	<input type='hidden' name='_csrf' id= "_csrf"  value='<%=csrf%>'/>
	<div class="col-md-12">
		<!--portlet begin -->
			<div class="portlet light bordered">
				<div class="portlet-body">
					<table class="table table-striped table-bordered table-hover" >
                        <thead>
                            <tr role="row" class="heading">
                                <th width="15%">
									姓名
								</th>
                                <th width="20%">
                                    邮箱
                                </th>
								<th width="15%">
									时间
                                </th>
								
                                <th width="10%">
									状态  
                                <th width="25%">
									所属文章
                                </th>
								<th width="15%">
                                     操作
                                </th>
                            </tr>
                        </thead>
                        <tbody>
							<tr ng-repeat="t in comments">
								<td class="text-center" ng-bind="t.author"> 
								</td>
								<td class="text-center" ng-bind="t.email"> 
								</td>
								<td class="text-center" ng-bind="format(t.create_at)"> 
									
								</td>
								<td class="text-center" > 
								<span ng-class="{'label':true ,'label-success':t.status == 1,'label-danger':t.status == -1,'label-default':t.status == 0}" >
										<i ng-class="{'fa':true ,'fa-unlock':t.status == 1 ,'fa-clock':t.status ==0,'fa-trash':t.status == 0}"></i>
										<span ng-bind="setStatus(t.status)"></span>	
									</span>

								</td>
								<td class="text-center"> 
								<a href="/topic/{{t.topic_id}}" target="_blank" ng-bind="t.topic_title"></a>
								</td>
								<td>
									<a  target = "_blank" href="/topic/{{t.topic_id}}#div-comment-{{t._id}}" title="查看" class="btn btn-success btn-xs"><i class="fa fa-eye"></i></a>
									<a ng-show="t.status == 1 || t.status == 0" href="javacript:void(0)" ng-click= "del(t)" title="删除" class="btn btn-danger btn-xs"><i class="fa fa-remove"></i></a>
									<a href="javacript:void(0)" ng-show ="t.status == 0 || t.status == -1" ng-click= "publish(t)" title="发布" class="btn btn-success btn-xs"><i class="fa fa-mail-forward"></i></a>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		<!--portlet end-->
	</div>
</div>
