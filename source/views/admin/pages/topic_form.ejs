<!-- BEGIN BREADCRUMB -->
<div class="page-bar">
    <ul class="page-breadcrumb" ng-bread-crumb></ul>
</div>
<!-- END BREADCRUMB -->

<div class="row">
	<div class="col-md-12">
		<div class="form-body">
			<!-- title begin -->
			<div class="form-group">
				<label class="col-md-3 label-control">标题</label>
				<div class="col-md-9">
					<input type="text" class="form-control" placeholder="输入文章标题" ng-model="current.title"/>	
				</div>
			</div>
			<!--title end-->
			<!--category  begin -->
			<div class="form-group">
				<label class="col-md-3 label-control">分类</label>
				<div class="col-md-9">
					<select ng-model="current.categoryid" ng-change>
						<option value="000000000000000000000000">无分类</option>
						<option ng-repeat="c in categories" value="{{c.categoryid}}" ng-bind="c.name"></option>
					</select>
				</div>
			</div>
			<!--category end-->
			<!-- is top begin -->
			<div class="form-group">
				<label class="col-md-3 label-control">是否置顶</label>
				<div class="col-md-9">
					<div class="radio-list">
						<label class="radio-inline">
						    <input type="radio" name="istop"  value="1" ng-model="current.top" checked> 置顶
						</label>
						<label class="radio-inline">
						    <input type="radio" name="istop"  value="0" ng-modle="current.top">  不置顶
						</label>
					</div>
				</div>
			</div>
			<!--is top end-->
			<!--tags  begin -->
			<div class="form-group">
				<label class="col-md-3 label-control">标签</label>
				<div class="col-md-9">
					<input type="text" class="form-control" placeholder="标签~~"/>	
				</div>
			</div>
			<!--tags end-->
		</div>
	</div>
</div>
